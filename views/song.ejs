<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
    <title>WHATOON</title>
    <% include style.ejs %>
  </head>
  <body>
    <div class="outter">
      <div class="inner">
        <div class="container">
          <div class="inside_outter">
            <div class="inner" style="padding-bottom: 0px;">
              <% var gradienttmp; %>
              <% for (var k = 0; k < data.Property[i].Songs_Num; k++) { %>
                <% gradienttmp = "linear-gradient(80deg, #" + data.Property[i].Cover_Background[data.Property[i].Songs[k].Lead[0] - 1] + " 0%, "; %>
                <% for (var l = 1; l < data.Property[i].Songs[k].Lead_Num; l++) { %>
                  <% gradienttmp = gradienttmp + "#" + data.Property[i].Cover_Background[data.Property[i].Songs[k].Lead[l - 1] - 1] + " " + ((100.0 / data.Property[i].Songs[k].Lead_Num * l) - .25) + "%, #" + data.Property[i].Cover_Background[data.Property[i].Songs[k].Lead[l] - 1] + " " + ((100.0 / data.Property[i].Songs[k].Lead_Num * l) + .25) + "%, "; %>
                <% } %>
                <% gradienttmp = gradienttmp + "#" + data.Property[i].Cover_Background[data.Property[i].Songs[k].Lead[data.Property[i].Songs[k].Lead_Num - 1] - 1] + " 100%);"; %>
              <% if (data.Property[i].Songs[k].Reprise == 0) { %><div class="song" style="background: <%= gradienttmp %>", onclick="window.location='/episode?ani=<%= i %>&s=<%= data.Property[i].Songs[k].Season - 1 %>&e=<%= data.Property[i].Songs[k].Episode - 1 %>&t=<%= data.Property[i].Songs[k].Start_min * 60 + data.Property[i].Songs[k].Start_sec %>'"><span class="inside_song"><%= data.Property[i].Songs[k].Title %><br /><%= data.Property[i].Songs[k].Length %></span></div><br />
              <% } else { %><div class="song" style="background: <%= gradienttmp %>", onclick="window.location='/reprise?ani=<%= i %>&k=<%= k %>'"><span class="inside_song"><%= data.Property[i].Songs[k].Title %><br /><%= data.Property[i].Songs[k].R1_Length + ", " + data.Property[i].Songs[k].R2_Length %></span></div><br />
              <% }} %>
              <div class="footer_table">
                <div class="footer_hover">
                  <div class="footer" onclick="window.location='/ani?ani=<%= i %>';">Back</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
